<Window x:Class="ServerApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="402" Width="692">
    
    <Window.Resources>
        <CollectionViewSource x:Key="ItemCollectionViewSource"  CollectionViewType="ListCollectionView"/>
    </Window.Resources>

    <Grid Margin="0,0,-41,9" HorizontalAlignment="Left" Width="725">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label2" Content="Recived Packages" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="301" Height="26"/>
        <Button x:Name="button" Content="Start listening" HorizontalAlignment="Right" Margin="0,100,58,0" VerticalAlignment="Top" Width="120" Height="24" Click="button_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxIP" Height="23" Margin="0,39,58,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Grid.ColumnSpan="2" Text="192.168.0.3"/>
        <TextBox x:Name="textBoxPort" HorizontalAlignment="Right" Height="23" Margin="0,67,58,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="52300" Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="IP&#xD;&#xA;IP" HorizontalAlignment="Left" Margin="512,39,0,0" VerticalAlignment="Top" Height="26" Width="39" RenderTransformOrigin="0.333,0.5"/>
        <Label x:Name="label1" Content="Port" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="512,67,0,0" Height="26" Width="32"/>
        <Label x:Name="ServerStatus" Content="Server disabled" HorizontalAlignment="Left" Margin="547,141,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Height="208"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="22,41,0,0" VerticalAlignment="Top" Height="308" Width="485" ItemsSource="{Binding RecivedMessages}"/>


    </Grid>
</Window>
