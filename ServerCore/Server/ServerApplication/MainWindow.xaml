<Window x:Class="ServerApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerApplication"
        mc:Ignorable="d"
        Title="Server vrsion 0.0" Height="402" Width="692">

    <Grid Margin="0,0,-41,9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="466*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.ColumnSpan="3" Margin="10,10,58,0" Stretch="Fill">
            <Viewbox Height="352" Stretch="Fill" Width="657">
                <Grid Height="352" Width="657">
                    <Label x:Name="label2" Content="Recived Packages" HorizontalAlignment="Left" VerticalAlignment="Top" Width="301" Height="26"/>
                    <Button x:Name="button" Content="Start listening" HorizontalAlignment="Right" Margin="0,90,0,0" VerticalAlignment="Top" Width="120" Height="24" Click="button_Click"/>
                    <TextBox x:Name="textBoxIP" Height="23" Margin="0,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Text="192.168.0.3"/>
                    <TextBox x:Name="textBoxPort" HorizontalAlignment="Right" Height="23" Margin="0,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="52300"/>
                    <Label x:Name="label" Content="IP&#xA;IP" HorizontalAlignment="Left" Margin="502,29,0,0" VerticalAlignment="Top" Height="26" Width="39" RenderTransformOrigin="0.333,0.5"/>
                    <Label x:Name="label1" Content="Port" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="502,57,0,0" Height="26" Width="32"/>
                    <Label x:Name="ServerStatus" Content="Server is disabled" HorizontalAlignment="Left" Margin="537,131,0,0" VerticalAlignment="Top" Width="120" Height="28" Background="White" Foreground="#FFFF0202"/>

                    <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top" Height="326" Width="497" Background="#FFFBDBDB"
                              ItemsSource="{Binding}">
                        <DataGrid.DataContext>
                            <local:MessagesContainer>
                                <local:MessagesContainer.RecivedMessages>
                                    <local:Message/>
                                </local:MessagesContainer.RecivedMessages>
                            </local:MessagesContainer>
                        </DataGrid.DataContext>
                    </DataGrid>
                </Grid>
            </Viewbox>
        </Viewbox>
    </Grid>
</Window>
