        <TextBox x:Name="textBoxIP" HorizontalAlignment="Left" Height="23" Margin="352,10,0,0" TextWrapping="Wrap" Text="kornik.ddns.net" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxPort" HorizontalAlignment="Left" Height="23" Margin="352,38,0,0" TextWrapping="Wrap" Text="52300" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Not connected" HorizontalAlignment="Left" Margin="352,91,0,0" VerticalAlignment="Top" Width="115"/>

    </Grid>
</Window>
