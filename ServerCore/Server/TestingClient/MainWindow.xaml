        mc:Ignorable="d"
        Title="MainWindow" Height="259" Width="499">
    <Grid Margin="0,0,2,6">
        <Button x:Name="button" Content="Start" HorizontalAlignment="Left" Margin="352,66,0,0" VerticalAlignment="Top" Width="120" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="174" Margin="12,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="324"/>
